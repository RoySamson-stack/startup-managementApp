<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Panel"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/black"
        android:gravity="center" />

    <Button
        android:id="@+id/btnEmployees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Employees"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:gravity="start|center_vertical"/>
<!--        android:drawableStart="@drawable/ic_employee_icon" />-->

    <Button
        android:id="@+id/btnDepartments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Departments"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:gravity="start|center_vertical"/>
<!--        android:drawableStart="@drawable/ic_department_icon" />-->

    <Button
        android:id="@+id/btnTaskss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tasks"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:gravity="start|center_vertical"/>
<!--        android:drawableStart="@drawable/ic_tasks_icon" />-->

    <!-- Add more buttons or other UI elements as needed -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvEmployeesCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Employees: 0"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvDepartmentsCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Departments: 0"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:padding="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTotalTasksCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total Tasks: 0"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvCompletedTasksCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Completed Tasks: 0"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:padding="8dp" />

    </LinearLayout>

</LinearLayout>
